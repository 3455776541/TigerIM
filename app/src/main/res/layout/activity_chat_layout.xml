<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_chat_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:cacheColorHint="@color/transparency"
            android:divider="@null"
            android:dividerHeight="@dimen/dimen_20"
            android:listSelector="@color/transparency"
            android:padding="@dimen/dimen_10"
            android:transcriptMode="normal"/>

        <include layout="@layout/divider_horizontal_view"/>

        <cn.ittiger.im.ui.keyboard.ChatKeyboard
            android:id="@+id/ckb_chat_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
